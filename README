# git-bash prompt
$GIT_HOME/etc/profile.d/git-prompt.sh

# Clear npm cache
rm -rf node_modules && rm package-lock.json
npm cache clear --force

# Resolves npm ERR! request to https://registry.npmjs.org/semver/-/semver-6.3.0.tgz failed
npm config set registry http://registry.npmjs.org/
npm config set proxy http://usr:pwd@host:port
npm config set https-proxy http://usr:pwd@host:port

# From: <https://stackoverflow.com/a/51669404>
dos_path_to_linux(){
  sed -e 's?\\?/?g' -e' s?[cC]:?/mnt/c?' <<<"$1"
}
